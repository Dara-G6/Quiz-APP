<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BestScoreActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--    Top bar    -->
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#23286b"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_height="match_parent">
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/BtnClose"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:drawableRight="@drawable/arrow_left_white"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="4"
                android:textStyle="bold"
                android:textSize="24dp"
                android:fontFamily="@font/odormeanchey"
                android:id="@+id/TextHeader"
                android:textColor="@color/white"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/best_score"/>

        </LinearLayout>

        <!-- Score math-->
        <androidx.cardview.widget.CardView
            android:layout_margin="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="20dp"
            android:layout_width="match_parent"
            android:layout_height="168dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                   android:layout_margin="4dp"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:src="@drawable/math_512"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:fontFamily="@font/odormeanchey"
                        android:text="@string/math"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        android:textAlignment="textStart"
                        android:textStyle="bold"
                        android:layout_margin="10dp"
                        android:id="@+id/TextScoreMath"
                        android:fontFamily="@font/odormeanchey"
                        android:text="@string/score"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        android:textAlignment="textStart"
                        android:textStyle="bold"
                        android:id="@+id/TextTimeMath"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/odormeanchey"
                        android:text="@string/time"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:id="@+id/TextNoRecordeMath"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/odormeanchey"
                        android:text="@string/no_record"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Score science-->
        <androidx.cardview.widget.CardView
            android:layout_margin="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_margin="4dp"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:src="@drawable/planetarium"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:fontFamily="@font/odormeanchey"
                        android:text="@string/science"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:id="@+id/TextScoreScience"
                        android:textColor="@color/black"
                        android:textAlignment="textStart"
                        android:textStyle="bold"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/odormeanchey"
                        android:text="@string/score"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        android:textAlignment="textStart"
                        android:textStyle="bold"
                        android:id="@+id/TextTimeScience"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/odormeanchey"
                        android:text="@string/time"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:id="@+id/TextNoRecordeScience"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/odormeanchey"
                        android:text="@string/no_record"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Score general-->
        <androidx.cardview.widget.CardView
            android:layout_margin="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_margin="4dp"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:src="@drawable/book"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:fontFamily="@font/odormeanchey"
                        android:text="@string/general_knowledge"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:id="@+id/TextScoreGeneral"
                        android:textColor="@color/black"
                        android:textAlignment="textStart"
                        android:textStyle="bold"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/odormeanchey"
                        android:text="@string/score"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:id="@+id/TextTimeGeneral"
                        android:textColor="@color/black"
                        android:textAlignment="textStart"
                        android:textStyle="bold"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/odormeanchey"
                        android:text="@string/time"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:id="@+id/TextNoRecordeGeneral"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/odormeanchey"
                        android:text="@string/no_record"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</ScrollView>