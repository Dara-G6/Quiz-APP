<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PlayGameActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="30"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:background="@color/blue"
            android:orientation="horizontal"
            android:layout_height="80dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/BtnClose"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:drawableLeft="@drawable/arrow_left_white_40"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:textStyle="bold"
                android:id="@+id/TextType"
                android:text="@string/type_of_game"/>
        </LinearLayout>

        <Chronometer
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textAlignment="textEnd"
            android:layout_marginRight="6dp"
            android:id="@+id/TextTime"/>

        <TextView
            android:layout_width="match_parent"
            android:textSize="18dp"
            android:layout_marginRight="6dp"
            android:id="@+id/TextCountQuestion"
            android:text="Question : 0/10"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:textSize="18dp"
            android:layout_marginRight="6dp"
            android:id="@+id/TextCountPoint"
            android:text="Point : 0/100"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:text="Question"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:elevation="36dp"
            app:cardCornerRadius="16dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="34dp"
                android:id="@+id/TextQuestion"
                android:textAlignment="center"
                android:text="Question?"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:elevation="36dp"
            android:id="@+id/CardA"
            app:cardCornerRadius="8dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="28dp"
                android:id="@+id/TextOptionA"
                android:textAlignment="center"
                android:text="OptionA"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:elevation="36dp"
            app:cardCornerRadius="8dp"
            android:id="@+id/CardB"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="28dp"
                android:id="@+id/TextOptionB"
                android:textAlignment="center"
                android:text="OptionB"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:elevation="36dp"
            android:id="@+id/CardC"
            app:cardCornerRadius="8dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="28dp"
                android:id="@+id/TextOptionC"
                android:textAlignment="center"
                android:text="OptionC"/>
        </androidx.cardview.widget.CardView>

        <Button
            android:layout_width="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/BtnNext"
            android:text="@string/next"
            android:drawableRight="@drawable/arrow_right_white"/>
    </LinearLayout>

</ScrollView>